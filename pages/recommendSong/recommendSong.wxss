.header{
    width: 100%;
    height: 400rpx;
}
.recommendSongList{
    position: relative;
    top: -40rpx;
    padding: 0rpx 20rpx;
    background-color: #fff;
    border-radius: 30rpx;
}

.listHeader{
    display: flex;
    height: 80rpx;
    line-height: 80rpx;
}
.listHeader text{
    width: 33%;
}
.listHeader text:nth-child(2){
    text-align: center;
    padding-left: 20rpx;
}
.listHeader text:last-child{
    text-align: right;
}


/* 滑动区 */
.scroll-view{
    height: calc(100vh - 488rpx);
}
.scrollItem{
    display: flex;
    position: relative;
    margin-bottom: 10rpx;
}
.scrollItem image{
    width: 100rpx;
    height: 100rpx;
    border-radius: 15rpx;
}
.musicInfo{
    margin-left: 20rpx;
    display: flex;
    flex-direction: column;
}
.musicInfo text{
    line-height: 50rpx;
    font-size: 28rpx;
    /* 防止歌名过长 */
    max-width: 400rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}
.author{
    display: flex;
    max-width: 400rpx;
}
.author text{
    margin-right: 20rpx;
    /* 防止歌手太多 */
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}
.icon-gengduo{
    line-height: 100rpx;
    position: absolute;
    right: 0;
    width: 100rpx;
    line-height: 100rpx;
    text-align: right;
}