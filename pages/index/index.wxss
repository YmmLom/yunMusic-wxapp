.banners{
  width: 100%;
  height: 300rpx;
}
.banners image{
  width: 100%;
  height: 100%;
}

.navContainer{
  display: flex;
}

.navItem{
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 20%;
  font-size: 26rpx;
}
.iconfont{
  background-color: #d43c33;
  width: 100rpx;
  line-height: 100rpx;
  text-align: center;
  border-radius: 50%;
  margin-top: 20rpx;
  color:ivory;
  font-size: 60rpx;
  margin-bottom: 6rpx;
}

.recommendScroll{
  display: flex;
  height: 280rpx;
  padding: 0rpx 20rpx;
}
.scrollItem{
  width: 200rpx;
  padding-right: 20rpx;
}
.scrollItem image{
  width: 200rpx;
  height: 200rpx;
  border-radius: 20rpx;
}
.scrollItem text{
  font-size:26rpx;
  /* 单行文本溢出隐藏 */
  /* display: block;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis; */
  /* 多行文本溢出 */
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-box-orient: vertical;  /* 设置纵向对其 */
  -webkit-line-clamp: 2;   /* 设置多行的行数 */
}

.ranking{
  padding:0rpx 20rpx;
  height: 450rpx;
}
.musicitem{
  display: flex;/* 当一个元素成为flex布局，其子元素会自动成为block元素 */
  padding: 10rpx 0rpx;
}
.musicitem text{
  width: 100rpx;
  height: 100rpx;
  text-align:center;
  line-height:100rpx;  
}
.musicitem text:last-child{
  width:400rpx;
  text-align:left;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.rankingitem text:first-child{
  font-size: 30rpx;
  line-height:80rpx;
}
.rankingitem image{
  height: 100rpx;
  width: 100rpx;
  border-radius: 10rpx;
}
