.searchContainer{
    padding: 0 20rpx;
}
.header{
    display: flex;
    height: 60rpx;
    line-height: 60rpx;
    align-items: center;
    padding: 10rpx 0;
}
.searchInput{
    flex: 1;
    background-color: #dfdfdf48;
    padding: 6rpx 0;
}
.icon-search1{
    font-size: 40rpx;
    background-color: #dfdfdf48;
    padding-right: 10rpx;
}

.cancel{
    width: 100rpx;
    text-align: center;
}
.hotContainer .title{
    font-size: 28rpx;
    height: 80rpx;
    line-height: 80rpx;
    border-bottom: 1rpx solid #eee;
}
.hotList{
    display: flex;
    flex-wrap: wrap;
}
.hotItem{
    width: 50%;
    height: 80rpx;
    line-height: 80rpx;
    font-size: 26rpx;
}
.index {
    margin: 0 10rpx;
}
.iconUrl{
    width: 40rpx;
    height: 20rpx;
    margin-left: 10rpx;
}